<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E50"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ШАПКА ПРОФИЛЯ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- КРУГЛАЯ АВАТАРКА -->
            <androidx.cardview.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="48dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#34495E">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_1"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Студент"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень: Новичок"
                android:textColor="#BDC3C7"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- КАРТОЧКА: Выучено слов -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#34495E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#2ECC71"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tv_words_learned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выучено слов: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- КАРТОЧКА: Пройдено уровней -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#34495E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/star_on"
                    app:tint="#F1C40F"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tv_levels_passed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пройдено уровней: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- КАРТОЧКА: XP и магазин сердец -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#34495E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hearts_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сердец максимум"
                    android:textColor="#BDC3C7"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <!-- ЗАГОЛОВОК МАГАЗИНА -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Магазин сердец"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обмен XP на сердца"
                    android:textColor="#BDC3C7"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="12dp" />

                <!-- КНОПКИ (в ряд) с сердцем + xN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_buy_1_heart"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="x1"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:background="@drawable/bg_shop_button"
                        android:gravity="center"
                        app:icon="@drawable/ic_heart_full"
                        app:iconTint="@null"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconSize="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_buy_3_hearts"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:text="x3"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:background="@drawable/bg_shop_button"
                        android:gravity="center"
                        app:icon="@drawable/ic_heart_full"
                        app:iconTint="@null"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconSize="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_buy_5_hearts"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="x5"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:background="@drawable/bg_shop_button"
                        android:gravity="center"
                        app:icon="@drawable/ic_heart_full"
                        app:iconTint="@null"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconSize="18dp" />
                </LinearLayout>

                <!-- ЦЕНЫ -->
                <TextView
                    android:id="@+id/tv_shop_prices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1 = 50 XP   •   +3 = 120 XP   •   +5 = 180 XP"
                    android:textColor="#BDC3C7"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- НОВАЯ КАРТОЧКА: Заработать XP (Мини-игра) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#34495E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нужно больше XP?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сыграй в Block Blast и заработай очки!"
                    android:textColor="#BDC3C7"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_play_game"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ИГРАТЬ"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#F1C40F"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textStart"
                    app:cornerRadius="28dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
